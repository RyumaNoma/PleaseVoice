<% provide(:title, "Edit") %>
<% provide(:h1, "アカウント情報更新") %>

<% if logged_in? %>
  <%= form_for(:user, url: "/users/update/#{current_user.id}") do |f| %>
    <div>
      <%= f.label :name, "名前" %>
    </div>
    <div>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :password, "パスワード" %>
    </div>
    <div>
      <%= f.password_field :password %>
    </div>
    <div>
      <%= f.label :password_confirmation, "パスワード確認入力" %>
    </div>
    <div>
      <%= f.password_field :password_confirmation %>
    </div>

    <%= f.submit "アカウント情報更新" %>
  <% end %>
<% end %>