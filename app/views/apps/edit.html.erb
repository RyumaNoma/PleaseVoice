<% provide(:title, "Edit") %>
<% provide(:h1, "編集") %>

<% if logged_in? && App.find(params[:id]).user_id == current_user.id %>
  <%= form_for(@app, url: "/apps/#{@app.id}/edit", method: :patch, :html => {:class => 'form'}) do |f| %>
    <div>
      <%= f.label :title, "タイトル" %>
    </div>
    <div>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :url, "URL" %>
    </div>
    <div>
      <%= f.text_field :url %>
    </div>
    <div>
      <%= f.label :exp, "説明" %>
    </div>
    <div>
      <%= f.text_area :exp %>
    </div>

    <%= f.submit "編集" %>
  <% end %>
<% end %>
